# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                      Inicio.index
GET     /usuario                               InicioUsuario.indexUsuario
GET     /administrador/{altKey}                InicioAdmin.index
GET     /administrativo                        InicioAdministrativo.index
GET     /profesor                              InicioProfesor.index
POST    /login                                 Inicio.login
# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public


# Importar rutas de Secure
*       /                                       module:secure

# Importar routes del m√≥dulo CRUD
*      /admin/              module:crud

# Catch all
*       /{controller}/{action}                  {controller}.{action}
